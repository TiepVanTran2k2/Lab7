@using LAb7FE.Controllers
@model List<Product>

<a asp-action="Create" class="btn btn-success">Create</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-success">Home</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Count</th>
            <th>EndDate</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Count</td>
                    <td>@item.EndDate</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Edit</a> 
                    </td>
                </tr>
            }
        }
    </tbody>
</table>